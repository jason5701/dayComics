{
  "include": ["src"], // src에 있는 모든 typescript 파일을 확인하고, 컴파일에 포함
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES6",
    "lib": ["ES6", "DOM", "ES2021.String"],
    "strict": true,
    "moduleResolution": "node"
  }
}
